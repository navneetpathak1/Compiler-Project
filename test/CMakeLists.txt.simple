cmake_minimum_required(VERSION 3.10)
project(simple_test)

# Set C++ standard
set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

# Add executable
add_executable(simple_test simple_test.cpp)

# Set compiler options
target_compile_options(simple_test PRIVATE 
    -Wall 
    -Wextra 
    -Wpedantic
) 